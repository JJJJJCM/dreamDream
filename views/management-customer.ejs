<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTS-8" />
    <title>CustomerManagement</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="stylesheet" href="../public/style/index.css" />

    <script
      src="https://code.jquery.com/jquery-3.6.1.min.js"
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <style>
      body {
        background-image: linear-gradient(to right, LightSkyBlue, #e0ffff);
      }
      .mainsection {
        padding: 10px 50px 0px;
      }
      .mainsection > div {
        border: black 1px solid;
        margin: 10px;
      }
      .goods_form {
        border: black 1px solid;
        margin: 10px;
        border: none;
        width: 300px;
        min-height: 100px;
        background-color: #eeeff1;
        display: inline-block;
        vertical-align: middle;
        padding-top: 20px;
        padding-bottom: 20px;
        border-radius: 5px;
      }
    </style>
    <script></script>
    <script>
      let id = "<%=data.id%>";
      function customerModify() {
        let nickname = $("#nickname").val();
        let name = $("#name").val();
        let email = $("#email").val();
        let point = $("#point").val();
        $.ajax({
          type: "PUT",
          url: `/management/customer/modify/${id}`,
          contentType: "application/json",
          dataType: "json",
          data: JSON.stringify({
            nickname: nickname,
            name: name,
            email: email,
            point: point,
          }),
          success: function (response) {
            console.log(id);
            alert("수정 성공");
          },
        });
      }

      function customerDelete() {
        let pw = "<%=data.password%>";
        const password = prompt("계정을 삭제하시려면 비밀번호를 입력해주세요");
        if (password === pw) {
          console.log(password, pw);
          $.ajax({
            type: "DELETE",
            url: `/management/customer/delete/${id}`,
            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify({ password: password, id: id }),
            success: function (response) {
              console.log(id);
              alert("삭제 완료");
            },
          });
        }
      }
    </script>
  </head>

  <body>
    <%-include('./components/header-management.ejs') %>

    <section class="mainsection">
      <div class="goods_form">
        <div>유저 정보</div>
        <input type="text" id="nickname" value="<%=data.nickname%>" />
        <input type="text" id="name" value="<%=data.name%>" />
        <input type="text" id="email" value="<%=data.email%>" />
        <input type="number" id="point" value="<%=data.point%>" /><br />
        <button onclick="customerModify()">수정하기</button>
        <button onclick="customerDelete()">삭제하기</button>
      </div>
    </section>
  </body>
</html>
